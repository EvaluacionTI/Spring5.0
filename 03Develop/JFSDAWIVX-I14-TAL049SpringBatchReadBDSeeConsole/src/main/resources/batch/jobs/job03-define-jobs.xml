<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!-- 
		A. Referencia al contexto 
	-->
	<import resource="../config/job02-batch-context.xml" />

	<!-- 
		B. Definir los beans de las Entity
	-->
	<bean id="idCECompraDTOEntrda" class = "pe.unjfsc.daw.spring5.entity.CECompraDTOEntrada" scope="prototype"/>
	<bean id="idCECompraDTOSalida" class = "pe.unjfsc.daw.spring5.entity.CECompraDTOSalida" scope="prototype"/>
	
	<!--
		C. Definir el JOB 
	-->		
	<batch:job id="idFirstJobBatch">
		<batch:step id="idFirstStep">
			<batch:tasklet>
				<batch:chunk reader="idReaderPostgres" processor="idProcesor" writer="idWriterConsole" commit-interval="10" />
			</batch:tasklet>
		</batch:step>
	</batch:job>
		
	<!-- 
		D. DefiniciÃ³n de Postgres
	-->
	<bean id="idReaderPostgres" class="org.springframework.batch.item.database.JdbcCursorItemReader">
		<property name="dataSource" ref="dataSource" /> 
		<property name="sql" value="select * from aemsa.EVLt10_compra"/>
		<property name="rowMapper">
			<bean id="idRowMapper" class="pe.unjfsc.daw.spring5.mapper.CDMapperCompra"/>
		</property>
		<property name="maxRows" value="300"></property>
		<property name="fetchSize" value="100"></property>
	</bean>

	<bean id="idProcesor" class ="pe.unjfsc.daw.spring5.process.CUProcesCompra"/>	

	<bean id="idWriterConsole" class="pe.unjfsc.daw.spring5.writer.CDWriterCompra"></bean>

</beans>
