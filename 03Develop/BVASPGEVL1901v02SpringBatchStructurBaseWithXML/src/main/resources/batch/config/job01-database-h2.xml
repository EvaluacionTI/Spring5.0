<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- 1. Definir una referencia de la base de datos en memoria con hsqldb.
		Libreria está alojada org.springframework.batch.core 
		Script utilizado schema-hsqldb.sql
 -->
	<jdbc:initialize-database data-source="dataSource">
		<jdbc:script location="classpath:/org/springframework/batch/core/schema-hsqldb.sql"/>
	
	</jdbc:initialize-database>

<!-- 2.0 Definir la conexción JDBC y asignar un nombre de base de datos a generar
		BbvaPaasJobs
 
-->	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.SingleConnectionDataSource">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value="jdbc:hsqldb:mem:BBVARQUITECTURA;DB_CLOSE_DELAY=-1"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
        <property name="suppressClose" value="true"/>		
	</bean>

<!-- 3.0 Definir la transacción relacionada al JDBC para efectuar las operaciones 
		 Input, Output, etc en BD hsqldb
-->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>

</beans>


