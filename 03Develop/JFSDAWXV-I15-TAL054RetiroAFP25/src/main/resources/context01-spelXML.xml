<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    					http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan base-package="pe.unjfsc.daw.spring5"></context:component-scan>

	<bean id="idDirecion" class="pe.unjfsc.daw.spring5.entity.CEAddress">
		<property name="number" value="101" />
		<property name="street" value="#{'Canete Km 61'}" />
		<property name="city" value="Lima" />
		<property name="state" value="Canete" />
		<property name="pinCode" value="#{'522309'}" />

	</bean>

	<bean id="idCEAfiliado" class="pe.unjfsc.daw.spring5.entity.CEAfiliado">
		<property name="empId" value="1001" />
		<property name="empName" value="Illari" />
		<!-- Bean reference through SpEL -->
		<property name="officeAddress" value="#{idDirecion}" />
		<property name="officeLocation" value="#{idDirecion.city}" />
		<!-- Method invocation through SpEL -->
		<property name="employeeInfo"	value="#{idDirecion.getAddress('Av.')}" />
	</bean>

	<bean id="idCESaldoAfiliado"
		class="pe.unjfsc.daw.spring5.entity.CESaldoAfiliado">
		<property name="codigo" value="#{'152027'}" />
		<property name="codigoAfiliado" value="#{'Nuevo Retiro'}" />
		<property name="saldoCIC" value="#{1673.97}" />
	</bean>

</beans>
